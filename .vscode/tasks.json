{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "detail": "Pub Clean + Get + Generate code on CMND+G",
            "label": "Pub: Clean, Get & Generate",
            "runOptions": {
                "reevaluateOnRerun": true
            },
            "options": {
                "cwd": "${workspaceFolder}/src/leafy_launcher"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            },
            "type": "shell",
            "command": "flutter clean;flutter pub get;flutter pub run build_runner watch --delete-conflicting-outputs"
        }
    ]
}